<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.poli.parcial.PrimaryController">

    <!-- TÍTULO -->
    <top>
        <Label text="CRUD Obras de Arte - Museo"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;" />
    </top>

    <!-- TABLA + DETALLE -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TableView fx:id="tablaObras" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colCodigo" text="Código" prefWidth="80" />
                    <TableColumn fx:id="colTitulo" text="Título" prefWidth="160" />
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="80" />
                    <TableColumn fx:id="colArtista" text="Artista" prefWidth="150" />
                </columns>
            </TableView>

            <Label text="Detalle de la obra seleccionada:" />
            <TextArea fx:id="txtDetalle"
                      editable="false"
                      prefRowCount="4"
                      wrapText="true" />
        </VBox>
    </center>

    <!-- FORMULARIO + BOTONES -->
    <right>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <GridPane hgap="5" vgap="5">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <children>
                    <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="txtCodigo" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Título:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="txtTitulo" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Fecha creación:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="txtFecha" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="dd/mm/aaaa" />

                    <Label text="Dimensiones:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <TextField fx:id="txtDimensiones" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Artista:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <ComboBox fx:id="cmbArtista" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                    <Label text="Tipo:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <ComboBox fx:id="cmbTipo" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                    <Label fx:id="lblExtra" text="Técnica / Material:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                    <TextField fx:id="txtExtra" GridPane.rowIndex="6" GridPane.columnIndex="1" />
                </children>
            </GridPane>

            <HBox spacing="10">
                <Button text="Crear" onAction="#handleCrear" />
                <Button text="Actualizar" onAction="#handleActualizar" />
            </HBox>

            <HBox spacing="10">
                <Button text="Eliminar" onAction="#handleEliminar" />
                <Button text="Limpiar" onAction="#handleLimpiar" />
            </HBox>

            <HBox spacing="10">
                <Button text="Guardar archivo" onAction="#handleGuardarArchivo" />
                <Button text="Cargar archivo" onAction="#handleCargarArchivo" />
            </HBox>
            
            <HBox spacing="10">
                <Button text="Listar obras"
                        onAction="#handleListar"
                        maxWidth="Infinity" />
            </HBox>

            <Button text="Ver detalle"
                    onAction="#handleVerDetalle"
                    maxWidth="Infinity" />
        </VBox>
    </right>

</BorderPane>